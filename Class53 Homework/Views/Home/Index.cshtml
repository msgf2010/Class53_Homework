@using Class53_Homework.Models
@using Class53.Data;
@model  SimchaModelView

<div class="container">
    <div id="simchas-index">

        <div class="header">
            <h1 style="text-align:center">Simchas</h1>
        </div>

        <div class="row header">
            <div class="col-md-4">
                <button class="btn btn btn-info" id="new-simcha">New Simcha</button>
            </div>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="text-align:center;vertical-align:middle;">Contributions</th>
                    <th style="text-align:center;vertical-align:middle;">Simcha Name</th>
                    <th style="text-align:center;vertical-align:middle;">Contributor Count</th>
                    <th style="text-align:center;vertical-align:middle;">Total</th>
                    <th style="text-align:center;vertical-align:middle;">Date</th>
                </tr>
                @foreach (Simcha s in Model.Simchas)
                {
                    <tr>
                        <td style="text-align:center;vertical-align:middle;">
                            <a class="btn btn-primary" href="/home/Contributions?simchaId=@s.Id">Contributions</a>
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @s.SimchaName
                        </td>

                        <td style="text-align:center;vertical-align:middle;">
                            @s.ContributorCount/@Model.TotalContributors
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @s.Total.ToString("C")
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @s.Date.ToString("dddd, dd MMMM yyyy")
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div id="new-simcha-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">New Simcha</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/home/AddSimcha">
                <div class="modal-body">
                    <input id="d-amount" name="simchaname" type="text" class="form-control" style="margin-top: 5px" placeholder="Simcha Name" />
                    <input id="d-date" name="date" type="date" class="form-control" style="margin-top: 5px" placeholder="Date" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/SubPageJs.js"></script>
}